{
  "version": 2,
  "cleanUrls": true,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "api/cron.js",  "use": "@vercel/node" },
    
    { "src": "sw.js",  "use": "@vercel/static" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "reset.html", "use": "@vercel/static" },
    { "src": "forgot.html", "use": "@vercel/static" },
    { "src": "register-step1-verify.html", "use": "@vercel/static" },
    { "src": "register-step1.html", "use": "@vercel/static" },
    { "src": "register-step2.html", "use": "@vercel/static" },
    { "src": "home.html", "use": "@vercel/static" },
    { "src": "calendar.html", "use": "@vercel/static" },
    { "src": "event.html", "use": "@vercel/static" },
    { "src": "dist/**", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" }
    
  ],
  "headers": [
    { "source": "/:all*\\.js",    "headers": [{ "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" }] },
    { "source": "/:all*\\.css",   "headers": [{ "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" }] },

    { "source": "/:all*\\.png",   "headers": [{  "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate"  }] },
    { "source": "/:all*\\.jpg",   "headers": [{  "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate"  }] },
    { "source": "/:all*\\.jpeg",  "headers": [{  "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate"  }] },
    { "source": "/:all*\\.webp",  "headers": [{  "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate"  }] },
    { "source": "/:all*\\.gif",   "headers": [{  "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate"  }] },
    { "source": "/:all*\\.svg",   "headers": [{  "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate"  }] },
    { "source": "/:all*\\.ico",   "headers": [{  "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate"  }] },

    
    { "source": "/:all*\\.html",  "headers": [{  "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate"  }] }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" }
  ],
  "crons": [
    { "path": "/api/cron", "schedule": "0 0 * * *" }
  ]
}
